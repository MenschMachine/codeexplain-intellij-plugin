<idea-plugin>
    <!-- This is a dynamic plugin that can be installed/uninstalled without restarting the IDE -->
    <id>com.explaincode.plugin</id>
    <name>Explain Selected Code</name>
    <vendor email="support@codeexplain.xyz" url="https://www.codeexplain.xyz">ExplainCode</vendor>

    <description><![CDATA[
    A plugin that displays information about selected code in the editor.
    Select a piece of code and get insights about what it does.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Services are now registered using @Service annotation -->

        <!-- Register startup activity -->
        <postStartupActivity implementation="com.explaincode.plugin.startup.PluginStartupActivity"/>
    </extensions>

    <!-- Removed applicationListeners for PluginLifecycleListener -->

    <actions>
        <action id="ExplainSelectedCode" class="com.explaincode.plugin.actions.ExplainSelectedCodeAction"
                text="Explain Selected Code" description="Analyze and explain the selected code"
                icon="/icons/explain_code.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift E"/>
        </action>
    </actions>
</idea-plugin>
